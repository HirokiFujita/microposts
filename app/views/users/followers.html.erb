<div class="row">
  <%= render 'user_info' %>
  <div class="col-md-8">  
    <h1>Followers</h1>
    <% @followed.each do |followed| %>
      <div class=“media”>
        <div class=“media-left”>
　　　　<a href=“#”>
　　　　  <%= link_to gravatar_for(followed, size: 50), followed, :class => "media-object" %>
    　　</a>
        </div>
        <div class=“media-body”>
          <h4 class=“media-heading”><%= followed.name %></h4>
          <p><%= followed.profile %></p>
        </div>
      </div>
    <% end %>  
  </div>
</div>  